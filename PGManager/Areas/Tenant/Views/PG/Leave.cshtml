@model PGManager.Models.PGRequest

@{
    ViewData["Title"] = "Leave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-primary">Leave</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Leave" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="PGId" type="hidden" />
            <input asp-for="StayId" type="hidden" />
            <div class="form-group">
                <label class="control-label">On Date</label>
                <input asp-for="Date" class="form-control" type="date" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
                <a asp-action="MyStays" class="btn btn-danger">Cancel</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {
            var date = new Date().toISOString().split("T")[0];
            $('#Date').val(date);
            $('#Date').attr("min", date);
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}