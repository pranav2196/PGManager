@model PGManager.Models.ApplicationUser
@{
	ViewData["Title"] = "User Details";
}
<div class="row">
	<div class="col-md-6">
		<dl class="row">
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Name)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Name)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.StreetAddress)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.StreetAddress)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.City)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.City)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.State)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.State)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Email)
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.Email)
				&nbsp;
				@if (Model.EmailConfirmed)
				{
					<span class="btn btn-outline-light btn-sm text-dark"><i class="fa fa-check-circle" style="color:green;"></i>&nbsp;Verified</span>
				}
				else
				{
					<span class="btn btn-outline-light btn-sm text-dark"><i class="fa fa-times-circle" style="color:red;"></i>&nbsp;Unverified</span>
				}
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayName("Phone Number")
			</dt>
			<dd class="col-sm-10">
				@Html.DisplayFor(model => model.PhoneNumber)
			</dd>
			<dt class="col-sm-2">
				@Html.DisplayNameFor(model => model.Gender)
			</dt>
			<dd class="col-sm-10">
				@if (Model.Gender == 'M')
				{
					<span class="btn btn-outline-light btn-sm text-dark"><i class="fa fa-male" style="color:royalblue;"></i>&nbsp;Male</span>
				}
				@if (Model.Gender == 'F')
				{
					<span class="btn btn-outline-light btn-sm text-dark"><i class="fa fa-female" style="color:hotpink;"></i>&nbsp;Female </span>
				}
			</dd>
		</dl>
	</div>
	<div class="col-md-6">
		<h4 class="mb-3 text-info">Documents</h4>
		<div class="row">
			@if (Model.Documents.Any())
			{
				foreach (var doc in Model.Documents)
				{
					<div class="col-md-6">
						<img class="d-block w-100" src="@doc.Url" alt="No Photos Available" style="max-height:200px;" />
					</div>
				}
			}
			else
			{
				<span>No documents available.</span>
			}
		</div>
	</div>
</div>