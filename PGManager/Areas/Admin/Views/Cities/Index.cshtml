@model IEnumerable<PGManager.Models.City>

@{
    ViewData["Title"] = "Cities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
<br/>
<p>
    <a asp-action="Upsert" class="btn btn-success btn-sm"><i class="fas fa-plus"></i> &nbsp;Add New City</a>
</p>
<div class="row">
    <div class="col-md-6 col-sm-12 col-lg-6">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary btn-sm" style="cursor:pointer;" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a> |
                                <button onclick=Delete("/Admin/Cities/Delete/@item.Id") class="btn btn-danger btn-sm" title="Delete">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-center">
                            No Data Available
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
    <script>
        function Delete(url) {
            alertify.confirm('Are you sure you want to delete this?', function () {
                $.ajax({
                    type: 'DELETE',
                    url: url,
                    success: function (data) {
                        location.reload();
                    }
                });
            }).set({ title: "PG Manager" });

        }
    </script>
}