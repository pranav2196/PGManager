@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav ml-auto">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown mr-1">
			<a class="nav-link dropdown-toggle text-white mr-5" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
				@await Component.InvokeAsync("UserName")
			</a>
			<div class="dropdown-menu bg-dark mt-2" aria-labelledby="navbarDropdown">
				<a class="dropdown-item text-white" asp-area="Identity" asp-page="/Account/Manage/Index" id="navbarDropdown" title="Manage">
					<i class="fa fa-id-card"></i>&nbsp;Edit Profile
				</a>
				<a class="dropdown-item text-white" asp-area="Identity" asp-page="/Account/Manage/SetPassword" title="Manage">
					<i class="fa fa-key"></i>&nbsp;Change Password
				</a>
				<div class="dropdown-divider"></div>
				<form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
					<button type="submit" class="dropdown-item text-white bg-dark"><i class="fa fa-sign-out-alt"></i>&nbsp;Logout</button>
				</form>
			</div>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
