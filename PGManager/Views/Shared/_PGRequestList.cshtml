@model IEnumerable<PGManager.Models.PGRequest>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Applicant
            </th>
            <th>
                Request On
            </th>
            <th>
                Price Tier
            </th>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Applicant.Name
                    </td>
                    <td>
                        @item.RequestOn.ToString("dd-MMM-yyyy")
                    </td>
                    <td>
                        @item.PriceTier.Name
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RequestStatus)
                    </td>
                    <td>
                        @item.Date.ToString("dd-MMM-yyyy")
                    </td>
                    <td>
                        <a asp-action="UserDetails" asp-controller="Request" asp-area="Owner" asp-route-id="@item.ApplicantUserId" class="btn btn-primary btn-sm" style="cursor:pointer;" title="Applicant Details">
                            <i class="fas fa-user"></i>
                        </a>
                        <a asp-action="Approve" asp-controller="Request" asp-area="Owner" asp-route-id="@item.Id" class="btn btn-primary btn-sm" style="cursor:pointer;" title="Approve/Reject">
                            <i class="fas fa-check"></i>&nbsp;<i class="fas fa-times"></i>
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" style="text-align:center;">No Records Available!</td>
            </tr>
        }
    </tbody>
</table>
